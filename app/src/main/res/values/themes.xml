<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InvestIn" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    // UserName and Password
    <style name="CustomTextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Normal state color (colorControlNormal) -->
        <item name="colorControlNormal">#d32f2f</item>

        <!-- Activated state color (colorControlActivated) -->
        <item name="colorControlActivated">#ff5722</item>

        <!-- Highlight state color (colorControlHighlight) -->
        <item name="colorControlHighlight">#f44336</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/app_color</item> <!-- Set border color to red -->
        <item name="boxBackgroundColor">#F2F4FA</item> <!-- Set background color to silver -->

    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:backgroundTint">@color/app_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationTextStyle" parent="Widget.Design.BottomNavigationView">>
        <item name="android:textSize">12sp</item> <!-- Decrease text size to 12sp -->
        <item name="android:textStyle">bold</item> <!-- Make the text bold -->
        <item name="android:textColor">@color/app_color</item>
    </style>

    <style name="Theme.InvestIn" parent="Base.Theme.InvestIn" />
</resources>