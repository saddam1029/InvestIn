<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PostDetail">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarTitleStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Post Detail"
                android:textColor="#1B1B1B"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.391" />

            <Button
                android:id="@+id/btInvest"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="35dp"
                android:backgroundTint="@color/app_color"
                android:text="Invest"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/titleTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Posted 2 hour ago"
                    android:textColor="#707070"
                    android:textSize="12sp"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/tvTime"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTime"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/imageView3"
                    android:fontFamily="@font/open_sans"
                    android:text="Pakistan"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlOne"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/line_color" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llOne">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:text="Food is any substance consumed to provide nutritional support and energy to an organism. It can be raw, processed, or formulated and is consumed orally by animals for growth, health, or pleasure. Food is mainly composed of water, lipids, proteins, and carbohydrates."
                    android:textColor="#1B1B1B"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlTwo"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/line_color" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llTwo">

                <TextView
                    android:id="@+id/tvSkill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Skill and Experience"
                    android:textColor="#1B1B1B"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/tvSkill"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:backgroundTint="#D6E4F6"
                    android:paddingTop="3dp"
                    android:text="Business"
                    android:textColor="#1B1B1B"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/tvSkill"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/bt1"
                    android:backgroundTint="#D6E4F6"
                    android:paddingTop="3dp"
                    android:text="Communication"
                    android:textColor="#1B1B1B"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/tvSkill"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/bt2"
                    android:backgroundTint="#D6E4F6"
                    android:paddingTop="3dp"
                    android:text="Creativity"
                    android:textColor="#1B1B1B"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/bt1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#D6E4F6"
                    android:paddingTop="3dp"
                    android:text="Marketing"
                    android:textColor="#1B1B1B"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/bt1"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/bt4"
                    android:backgroundTint="#D6E4F6"
                    android:paddingTop="3dp"
                    android:text="Money management"
                    android:textColor="#1B1B1B"
                    android:textSize="11sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlThree"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/line_color" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llThree">

                <TextView
                    android:id="@+id/tvAboutEntrepreneur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="About Entrepreneur"
                    android:textColor="#1B1B1B"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/rl4.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAboutEntrepreneur"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvVer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Profile Verification"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl4.1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Total Job Post"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvTotalJobPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="180dp"
                        android:layout_toEndOf="@id/tvTotal"
                        android:fontFamily="@font/open_sans"
                        android:text="15 job posted"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl4.2"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvInvi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Total Invitation"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvInvitation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="180dp"
                        android:layout_toEndOf="@id/tvInvi"
                        android:fontFamily="@font/open_sans"
                        android:text="5 invitations"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4.4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl4.3"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvInviRes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Invitation Responce"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvInvitationResponse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_toEndOf="@id/tvInviRes"
                        android:fontFamily="@font/open_sans"
                        android:text="2 Invitation Response"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
