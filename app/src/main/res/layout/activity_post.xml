<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Post">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarTitleStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Post"
                android:textColor="#1B1B1B"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.391" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Business Title"
                    android:textColor="#1B1B1B"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/title_text_input_layout"
                    style="@style/CustomTextInputLayoutStyle"
                    android:layout_width="330dp"
                    android:layout_marginStart="15dp"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitle"
                    android:theme="@style/CustomTextInputLayoutTheme"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp">

                    <EditText
                        android:id="@+id/etTitle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:hint="Enter Your Business Title"
                        android:padding="10dp"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_text_input_layout"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Business Description"
                    android:textColor="#1B1B1B"
                    android:gravity="top"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/description_text_input_layout"
                    style="@style/CustomTextInputLayoutStyle"
                    android:layout_width="330dp"
                    android:layout_marginStart="15dp"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDescription"
                    android:theme="@style/CustomTextInputLayoutTheme"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp">

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:gravity="top|start" />

                </com.google.android.material.textfield.TextInputLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlOne"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/line_color" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llOne">

                <TextView
                    android:id="@+id/tvBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="What is the Maximum Budget for Required Your Business"
                    android:textColor="#1B1B1B"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/budget_text_input_layout"
                    style="@style/CustomTextInputLayoutStyle"
                    android:layout_width="330dp"
                    android:layout_marginStart="15dp"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBudget"
                    android:theme="@style/CustomTextInputLayoutTheme"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp">

                    <EditText
                        android:id="@+id/etBudget"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:hint="Rs: 000,000,000"
                        android:padding="10dp"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlTwo"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/line_color" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llTwo">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Enter Your Current Complete Location"
                    android:textColor="#1B1B1B"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/LOCATION_text_input_layout"
                    style="@style/CustomTextInputLayoutStyle"
                    android:layout_width="330dp"
                    android:layout_marginStart="15dp"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLocation"
                    android:theme="@style/CustomTextInputLayoutTheme"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp">

                    <EditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:hint="Your Location"
                        android:padding="10dp"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>




            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlThree"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/line_color" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llThree">

                <TextView
                    android:id="@+id/tvSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Add Upto 5 Skills"
                    android:textColor="#1B1B1B"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSkills"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbBusiness"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="13dp"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Business"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbCommunication"
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@id/rbBusiness"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Communication"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbCreativity"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@id/rbCommunication"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Creativity"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />


                        <RadioButton
                            android:id="@+id/rbMarketing"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbBusiness"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Marketing"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbMoneyManagement"
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbBusiness"
                            android:layout_toEndOf="@id/rbMarketing"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Money management"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbSales"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbBusiness"
                            android:layout_toEndOf="@id/rbMoneyManagement"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Sales"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbLeadership"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbMarketing"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Leadership"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rPositiveMindset"
                            android:layout_width="120dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbMarketing"
                            android:layout_toEndOf="@id/rbLeadership"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Positive mindset"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rTechnicalSkills"
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbMarketing"
                            android:layout_toEndOf="@id/rPositiveMindset"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Technical skills"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbListening"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbLeadership"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Listening"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbTimeManagement"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/rbListening"
                            android:layout_below="@id/rbLeadership"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Time management"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbStrategy"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/rbTimeManagement"
                            android:layout_below="@id/rbLeadership"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Strategy"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbCustomerService"
                            android:layout_width="120dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbListening"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Customer Service"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                        <RadioButton
                            android:id="@+id/rbNetworking"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/rbListening"
                            android:layout_toEndOf="@id/rbCustomerService"
                            android:background="@drawable/radio_button_background"
                            android:gravity="center"
                            android:button="@null"
                            android:text="Networking"
                            android:textColor="#1B1B1B"
                            android:textSize="11sp" />

                    </RelativeLayout>

                </RadioGroup>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
