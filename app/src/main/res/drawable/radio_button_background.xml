<!-- radio_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <!-- Background color when unchecked -->
                <shape android:shape="rectangle">
                    <solid android:color="#D6E4F6" /> <!-- Change to your desired color -->
                    <corners android:radius="15dp" /> <!-- Adjust the radius to make it round -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <!-- Background color when checked -->
                <shape android:shape="rectangle">
                    <solid android:color="#2196F3" /> <!-- Change to your desired color -->
                    <corners android:radius="15dp" /> <!-- Adjust the radius to make it round -->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>

